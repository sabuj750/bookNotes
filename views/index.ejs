<%- include('./partials/header') %>
<div class="container">
  <header>
    <h1>üìö My Book Collection</h1>
    <div class="add-book">
      <a href="/add">‚ú® Add New Book</a>
    </div>
  </header>
  <div class="books-grid">
    <% books.forEach(book => { %>
    <div class="book">
      <div class="book-content">
        <img src="<%= book.cover_url %>" alt="Book Cover" />
        <div class="book-info">
          <h2><%= book.title %></h2>
          <p class="book-author"><%= book.author %></p>
          <p class="book-review"><%= book.review %></p>
          <div class="book-meta">
            <div class="rating">
              <div class="stars">
                <% for(let i = 0; i < 5; i++) { %> <% if(i < book.rating) { %>
                <div class="star"></div>
                <% } else { %>
                <div class="star empty"></div>
                <% } %> <% } %>
              </div>
              <span><%= book.rating %>/5</span>
            </div>
            <div class="date-read">Apr 8, 2024</div>
          </div>
          <div class="book-actions">
            <a href="/edit/<%= book.id %>" class="action-btn edit-btn"
              >‚úèÔ∏è Edit</a
            >
            <button
              class="action-btn delete-btn"
              onclick="deleteBook(<%= book.id %>)"
            >
              üóëÔ∏è Delete
            </button>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <footer>
    <p>&copy; 2024 My Book Collection. Happy Reading! üìñ</p>
  </footer>
</div>
 <%- include('./partials/footer') %>
